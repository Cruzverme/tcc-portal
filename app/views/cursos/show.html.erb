<p>
  <strong>Nome:</strong>
  <%= @curso.nome %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @curso.descricao %>
</p>

<p>
  <strong>Coordenador:</strong>
  <%= @curso.coordenador.nome %>
</p>

<p>
  <strong>Disciplinas:</strong>
  <% @curso.disciplines.each do |discipline| %>
    <p><%= discipline.name %></p>
  <% end %>
</p>

<p>
  <% if current_user.course_exists?(@curso.id) %>
    <button id="matricular_curso" class="btn" disabled="true" onclick="matricularCurso(<%= @curso.id %>, <%= current_user.id %>);">Matricular-se</button>
  <% else %>
    <button id="matricular_curso" class="btn" onclick="matricularCurso(<%= @curso.id %>, <%= current_user.id %>);">Matricular-se</button>
  <% end %>
</p>

<%= link_to 'Edit', edit_curso_path(@curso) %> |
<%= link_to 'Back', cursos_path %>
