<h1>Listing Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Professores</th>
      <th>Alunos</th>
      <th>Carga horaria</th>
      <th>Coordenador</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.nome %></td>
        <td><%= curso.professores %></td>
        <td><%= curso.alunos %></td>
        <td><%= curso.carga_horaria %></td>
        <td><%= curso.coordenador %></td>
        <td><%= link_to 'Mostrar', curso %></td>
        <td><%= link_to 'Editar', edit_curso_path(curso) %></td>
        <td><%= link_to 'Deletar', curso, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

